<Window x:Name="window" x:Class="Mass_Image_Scaler.MyMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mass_Image_Scaler"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        TextElement.FontSize="20px"
        Title="MyMessageBox" Height="167" Width="390" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock x:Name="text" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Text="Question" TextAlignment="Center"/>
        <Button x:Name="button_0" Content="Yes" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,100,10" Click="HandleButtonClicked_0" IsDefault="True"></Button>
        <Button x:Name="button_1" Content="No" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="100,0,0,10" Click="HandleButtonClicked_1"/>
    </Grid>
</Window>
